<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FADCD9">

    <ImageView
        android:id="@+id/btnBack1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_back_arrow"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/logopage"
        android:contentDescription="Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Update category"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="90dp" />

    <EditText
        android:id="@+id/edtCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack1"
        android:layout_marginTop="55dp"
        android:hint="Enter category name"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:minHeight="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtCategoryName"
        android:layout_marginTop="20dp"
        android:text="Active"
        android:textSize="16sp"
        android:textColor="#000" />

    <CheckBox
        android:id="@+id/checkActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtCategoryName"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkActive"
        android:layout_marginTop="20dp"
        android:text="Update"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

</RelativeLayout>
