<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FDE9EA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarProductDetail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F9E6E6"
            android:elevation="4dp"
            app:titleTextColor="#F9E6E6"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp">

            <!-- Nút Quay Lại (Bên Trái) -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back"
                android:layout_gravity="start"
                android:layout_marginStart="8dp" />

            <!-- Khoảng trống để đẩy nút bên phải ra xa -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Nút Giỏ Hàng (Bên Phải) -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp">

                <!-- Nút Giỏ Hàng -->
                <ImageView
                    android:id="@+id/btnCart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_cart"
                    android:contentDescription="Cart" />

                <!-- Số lượng sản phẩm trong giỏ -->
                <TextView
                    android:id="@+id/txtCartCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_circle_red"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:visibility="visible" />
            </FrameLayout>


        </LinearLayout>

        <!-- Image Banner -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_example_foods"
            android:layout_marginTop="50dp"/>

        <!-- Product Name -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="16dp" />


        <!-- Product Description -->
        <TextView
            android:id="@+id/product_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organic Mountain works as a seller for many organic growers of organic lemons. Organic lemons are easy to spot in your produce aisle..."
            android:textColor="#777"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF5722"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#000"
            android:drawableStart="@drawable/ic_cart"
            android:text="Add to cart"
            android:textColor="#FFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <!-- Individual Review -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="4dp">

                <!-- User Avatar -->
                <!-- User Avatar và Name -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="8dp">

                    <!-- User Avatar -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_user" />

                    <!-- User Name -->
                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngoc Duoc"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>


                <!-- Review Text -->
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="So delicious"
                    android:textColor="#000" />

                <!-- Rating Bar -->
                <RatingBar
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="0.4"
                    android:scaleY="0.5"
                    android:stepSize="0.5"
                    android:paddingLeft="0dp"/>
            </LinearLayout>

            <!-- Review Input -->
            <EditText
                android:id="@+id/edtReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Review for product"
                android:padding="10dp"
                android:background="#FFF"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

            <!-- Send Button -->
            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textColor="#FFF"
                android:background="#000"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
