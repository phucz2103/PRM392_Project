<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FDE9EA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarProductDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9E6E6"
            android:elevation="4dp"
            app:titleTextColor="#F9E6E6"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

        <!-- Cart Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/btnCart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_cart"
                    android:contentDescription="Cart" />

                <TextView
                    android:id="@+id/txtCartCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_circle_red"
                    android:text="0"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:visibility="visible" />
            </FrameLayout>
        </LinearLayout>

        <!-- Image Banner -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_example_foods"
            android:layout_marginTop="20dp" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="16dp" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/product_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organic Mountain works as a seller for many organic growers of organic lemons..."
            android:textColor="#777"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚«50,000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF5722"
            android:layout_marginTop="8dp" />

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#000"
            android:drawableStart="@drawable/ic_cart"
            android:text="Add to cart"
            android:textColor="#FFF" />

        <!-- Review Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <!-- Reviews List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewduoc"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <!-- Review Input -->
            <EditText
                android:id="@+id/edtReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#FFF"
                android:hint="Review for product"
                android:padding="10dp"
                android:visibility="gone" />

            <!-- Rating Bar -->
            <RatingBar
                android:id="@+id/edtRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:stepSize="0.5"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <!-- Send Review Button -->
            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="#000"
                android:text="Send"
                android:textColor="#FFF"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
