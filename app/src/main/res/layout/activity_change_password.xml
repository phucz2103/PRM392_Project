<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E6E6"
    tools:context=".activities.ChangePasswordActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChangePassword"
        android:layout_width="408dp"
        android:layout_height="48dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#F9E6E6"
        android:background="#F9E6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Current Password Label -->
    <TextView
        android:id="@+id/tvCurrentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarChangePassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"/>

    <!-- Current Password Input -->
    <EditText
        android:id="@+id/etCurrentPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="*********"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentPassword"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/ivCurrentPassword"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:src="@drawable/ic_closed_eye"
        android:contentDescription="Toggle Password"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etCurrentPassword"
        app:layout_constraintBottom_toBottomOf="@id/etCurrentPassword"/>

    <!-- New Password Label -->
    <TextView
        android:id="@+id/tvNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCurrentPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"/>

    <!-- New Password Input -->
    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="*********"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNewPassword"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/ivNewPassword"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:src="@drawable/ic_closed_eye"
        android:contentDescription="Toggle Password"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etNewPassword"
        app:layout_constraintBottom_toBottomOf="@id/etNewPassword"/>


    <!-- Confirm New Password Label -->
    <TextView
        android:id="@+id/tvConfirmNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm New Password"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNewPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"/>

    <!-- Confirm New Password Input -->
    <EditText
        android:id="@+id/etConfirmNewPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="*********"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmNewPassword"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/ivConfirmNewPassword"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:src="@drawable/ic_closed_eye"
        android:contentDescription="Toggle Password"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etConfirmNewPassword"
        app:layout_constraintBottom_toBottomOf="@id/etConfirmNewPassword"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveChangePassword"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Save"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/etConfirmNewPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
