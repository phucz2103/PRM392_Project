<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E6E6"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logopage" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarResetPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9E6E6"
        android:elevation="4dp"
        app:titleTextColor="#F9E6E6"
        android:theme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- CardView chứa form đặt lại mật khẩu -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#FFF5F5F5"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="449dp"
            android:background="#F9E6E6"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Trường nhập New Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Password"
                android:textColor="#FF000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/rsNewPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@android:drawable/edit_text"
                android:hint="New Password"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp" />

            <!-- Trường nhập Confirm-Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Confirm-Password"
                android:textColor="#FF000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/rsConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:background="@android:drawable/edit_text"
                android:hint="Confirm-Password"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp" />

            <!-- Nút Confirm new pass -->
            <Button
                android:id="@+id/btnConfirmNewPass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF000000"
                android:text="Confirm new pass"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

