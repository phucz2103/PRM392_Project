<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".activities.DashboardActivity">

  <!-- Tiêu đề "Dashboard" -->

  <!-- GridLayout cho 4 thẻ thống kê -->

  <!-- Tiêu đề "Revenue Chart" -->

  <!-- Biểu đồ cột -->

  <!-- Tiêu đề "Best Selling Products" -->

  <!-- Tiêu đề cho các cột -->

  <!-- RecyclerView cho danh sách sản phẩm bán chạy -->

  <TextView
      android:id="@+id/tvProfileStatistics"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:text="Dashboard"
      android:textColor="#000000"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <GridLayout
      android:id="@+id/gridStats"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:columnCount="2"
      android:rowCount="2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvProfileStatistics">

    <!-- Thẻ 1: Users -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#E6E6FA"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:padding="12dp">

        <ImageView
            android:id="@+id/negativeUser"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_view"
            app:tint="#8A2BE2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Users"
              android:textColor="#000000"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/tvUsers"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="#000000"
              android:textSize="18sp"
              android:textStyle="bold" />
        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Thẻ 2: Orders -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#E0FFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:padding="12dp">

        <ImageView
            android:id="@+id/negativeOrder"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_add"
            app:tint="#00CED1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Orders"
              android:textColor="#000000"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/tvOrders"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="#000000"
              android:textSize="18sp"
              android:textStyle="bold" />
        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Thẻ 3: Category -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#E0FFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:padding="12dp">

        <ImageView
            android:id="@+id/negativeCategory"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_add"
            app:tint="#00CED1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Category"
              android:textColor="#000000"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/tvCategory"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="#000000"
              android:textSize="18sp"
              android:textStyle="bold" />
        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Thẻ 4: Revenue -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#FFE4E1"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:padding="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_save"
            app:tint="#FF4040" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Revenue"
              android:textColor="#000000"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/tvRevenue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="$0.00"
              android:textColor="#000000"
              android:textSize="18sp"
              android:textStyle="bold" />
        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>
  </GridLayout>

  <TextView
      android:id="@+id/tvProfileVisit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:paddingStart="10dp"
      android:text="Revenue Chart"
      android:textColor="#000000"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/gridStats" />

  <com.github.mikephil.charting.charts.BarChart
      android:id="@+id/barChart"
      android:layout_width="0dp"
      android:layout_height="200dp"
      android:layout_marginTop="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvProfileVisit" />

  <TextView
      android:id="@+id/tvBestSellingProducts"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="12dp"
      android:text="Best Selling Products"
      android:textColor="#000000"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/barChart" />

  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvBestSellingProducts">

    <!-- Tiêu đề "Product Name" -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:padding="8dp"
        android:text="Product Name"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Tiêu đề "Price" -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="Price"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Tiêu đề "Quantity" -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="Quantity"
        android:textSize="14sp"
        android:textStyle="bold" />
  </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recycler_view"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>
