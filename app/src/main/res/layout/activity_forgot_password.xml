<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E6E6"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#F9E6E6"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#F9E6E6" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logopage" />


    <!-- CardView chứa form nhận OTP -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#FFF5F5F5"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="541dp"
            android:background="#F9E6E6"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Trường nhập Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Email"
                android:textColor="#FF000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fpEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text"
                android:hint="EnterEmail"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12dp" />

            <!-- Nút Receive OTP -->

            <!-- Trường nhập OTP -->

            <Button
                android:id="@+id/btnReceiveOtp"
                android:layout_width="351dp"
                android:layout_height="55dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="#FF000000"
                android:gravity="center"
                android:text="Receive OTP"
                android:textAlignment="center"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="OTP"
                android:textColor="#FF000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fgOtp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:background="@android:drawable/edit_text"
                android:hint="OTP value"
                android:inputType="number"
                android:paddingHorizontal="12dp" />
            <TextView
                android:id="@+id/tvCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Time remaining: 60 seconds"
                android:textColor="#FF000000"
                android:textSize="16sp" />

            <!-- Nút Verify -->
            <Button
                android:id="@+id/btnVerify"
                android:layout_width="346dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF000000"
                android:text="Verify"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


